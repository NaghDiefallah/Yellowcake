<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Yellowcake.Views.Components.ModCardSkeleton">

  <Border Background="{DynamicResource CardBackgroundBrush}"
          CornerRadius="12"
          Padding="16"
          BorderBrush="{DynamicResource BorderBrush}"
          BorderThickness="1">
    <Grid RowDefinitions="120,Auto,Auto,Auto">
      <!-- Thumbnail Skeleton -->
      <Border Grid.Row="0" 
              Background="#20FFFFFF" 
              CornerRadius="8"
              ClipToBounds="True">
        <Border.Styles>
          <Style Selector="Border">
            <Style.Animations>
              <Animation Duration="0:0:1.5" IterationCount="Infinite">
                <KeyFrame Cue="0%">
                  <Setter Property="Opacity" Value="0.5"/>
                </KeyFrame>
                <KeyFrame Cue="50%">
                  <Setter Property="Opacity" Value="1"/>
                </KeyFrame>
                <KeyFrame Cue="100%">
                  <Setter Property="Opacity" Value="0.5"/>
                </KeyFrame>
              </Animation>
            </Style.Animations>
          </Style>
        </Border.Styles>
      </Border>

      <!-- Title Skeleton -->
      <Border Grid.Row="1" 
              Height="20" 
              Background="#20FFFFFF" 
              CornerRadius="4" 
              Margin="0,12,60,0"/>

      <!-- Description Skeleton -->
      <StackPanel Grid.Row="2" Spacing="6" Margin="0,8,0,0">
        <Border Height="14" Background="#15FFFFFF" CornerRadius="3"/>
        <Border Height="14" Background="#15FFFFFF" CornerRadius="3" Margin="0,0,40,0"/>
      </StackPanel>

      <!-- Author Skeleton -->
      <Border Grid.Row="3" 
              Height="12" 
              Width="100"
              HorizontalAlignment="Left"
              Background="#10FFFFFF" 
              CornerRadius="3" 
              Margin="0,8,0,0"/>
    </Grid>
  </Border>
</UserControl>